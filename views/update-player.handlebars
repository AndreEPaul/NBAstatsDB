<h3>Table for viewing:</h3>
<table>
    <thead>
    <th>Height</th>
    <th>Weight</th>
    <th>Last Name</th>
    <th>First Name</th>
    <th>Team</th>
    </thead>
    <tbody>
    {{#each players}}
        <tr>
            <td>{{height}}</td>
            <td>{{weight}}</td>
            <td>{{lastName}}</td>
            <td>{{firstName}}</td>
            <td>{{teamName}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>

<h3>Update players</h3>
<form id="updateplayer" action="/updateplayers" method="post">
    Height: <input type="text" name="upheight"><br>
    Weight: <input type="text" name="upweight"><br>
    Last name: <input type="text" name="upfirstName"><br>
    First name: <input type="text" name="uplastName"><br>
    TeamID (input manually, selecting from dropdown doesn't work): <input type="number" name="upteamID"><br>
    PlayerID (input manually) <input type="number" name="upplayerID">
    <br><br><br>
    <input type="submit" value="Submit">
